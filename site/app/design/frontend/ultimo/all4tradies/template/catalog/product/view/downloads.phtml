?>
<?php
    $mediaURL = Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA);
    $_downloads = $this->getProduct()->getDownloads();
    $_product = $this->getProduct();
?>
<?php
    if ($_downloads) :
        $specSheet = str_replace("/", "", $_product->getDownloads());
        $pdfString = '.pdf';
        $downloadArray = explode(',', $specSheet);
        foreach ($downloadArray as $downloadFile) :
            $pos = strpos($specSheet, $pdfString);
            if ($pos) :
                echo '<a href="' . $mediaURL . 'downloads/' . $downloadFile . '" target="_blank">Download Specification Sheet</a><br />';
            endif;
        endforeach;

        $specSheet = $_product->getDangerous_good_data_sheet();
        $pdfString = '.pdf';
        $downloadArray = explode(',', $specSheet);
        foreach ($downloadArray as $downloadFile) :
            $pos = strpos($specSheet, $pdfString);
            if ($pos) :
                echo '<a href="' . $mediaURL . 'downloads/' . $downloadFile . '" target="_blank">Download Dangerous Good Sheet</a><br />';
            endif;
        endforeach;
    endif; ?>
