<?php $background = Mage::helper('backgroundimages/data')->getBackground(); ?>
<?php $promo = Mage::helper('backgroundimages/data')->getPromo(); ?>
<?php if ($background) : ?>
    <div class="cms-background-container">
        <ul>
            <li class="left"><img src="<?php echo $background['img'] ?>" /></li>
            <?php if ($promo) : ?>
                <?php if (isset($promo['link'])): ?>
                    <li class="right"><a href="<?php echo $promo['link']; ?>"><img src="<?php echo $promo['img'] ?>" /></a></li>
                <?php endif; ?>
                <?php if (!isset($promo['link'])): ?>
                    <li class="right"><img src="<?php echo $promo['img'] ?>" /></li>
                    <?php endif; ?>
            <?php endif; ?>
        </ul>
    </div>
<?php endif; ?>
